<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Projeto Assistivo - Mini Mercado IN-casa</title>
    <style>
        /* Estilo para cobrir toda a tela */
        body, html {
            height: 100%;
            margin: 0;
        }
        #telaInteiraButton {
            width: 100%;
            height: 100%;
            background-color: greenyellow;
            border: none;
            outline: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <button class="btn btn-success" title="Seja bem vindo ao projeto Mini-Mercado In-Casa" id="telaInteiraButton">
        <img src="https://raw.githubusercontent.com/lucasmainstdevifal/Images/main/mercados.png" alt="Mercados">
    </button>

    <script>
        var botao = document.getElementById("telaInteiraButton");
        var cliqueCount = 0;

        botao.addEventListener("dblclick", function() {
            window.location.href = '/listproducts';
        });
        

        botao.addEventListener("click", function() {
            cliqueCount++;

            // Toca um áudio (substitua 'seu_audio.mp3' pelo caminho do seu arquivo de áudio)
            var audio = new Audio('welcome.mp3');
            audio.play();

            // Reinicia o contador após 1 segundo (1000 milissegundos)
            setTimeout(function() {
                cliqueCount = 0;
            }, 8000);
        });

    </script>
</body>
</html>
