      <script>
       document.addEventListener('DOMContentLoaded', function () {
        const elements = document.querySelectorAll('[title]');
        const audioElement = document.getElementById('audioElement'); // Adicione um elemento de áudio com ID 'audioElement'.

        // Inicialize uma fila de áudios vazia.
        const audioQueue = [];
        let isPlaying = false;

        elements.forEach(element => {
          element.addEventListener('mouseover', () => {
            const textToSpeak = element.getAttribute('title');
            audioQueue.push(textToSpeak); // Adicione o texto na fila de áudios.
            playNextAudio(); // Tente reproduzir o próximo áudio na fila.
          });
        });

        // Adicione um evento para detectar quando o áudio termina de ser reproduzido.
        audioElement.addEventListener('ended', () => {
          isPlaying = false;
          playNextAudio(); // Tente reproduzir o próximo áudio na fila quando o áudio atual terminar.
        });

        function playNextAudio() {
          if (!isPlaying && audioQueue.length > 0) {
            const textToSpeak = audioQueue.shift(); // Remova o primeiro elemento da fila.
            speak(textToSpeak); // Inicie a reprodução do áudio.
          }
        }

           // Narração automática ao abrir a página com um pequeno atraso
            setTimeout(() => {
                const initialTextToSpeak = "Bem-vindo à nossa página de produtos.";
                speak(initialTextToSpeak);
            }, 1000); // Atraso de 1 segundo (ajuste conforme necessário).
          

          function speak(text) {
            const speechSynthesis = window.speechSynthesis;
            const voices = speechSynthesis.getVoices();
            const voice = voices.find(voice => voice.lang === 'pt-BR'); // Escolha a voz desejada (português do Brasil).
        
            const utterance = new SpeechSynthesisUtterance();
            utterance.text = text;
            utterance.lang = 'pt-BR'; // Defina o idioma para a narração.
        
            if (voice) {
              utterance.voice = voice;
            }
        
            speechSynthesis.cancel();
            speechSynthesis.speak(utterance);
          }

          
        });
        </script>  

